{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "aptPkgs": ["ffmpeg"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
