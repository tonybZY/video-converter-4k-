{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-18_x", "python3", "ffmpeg"],
          "aptPkgs": ["python3", "python3-pip", "ffmpeg"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
